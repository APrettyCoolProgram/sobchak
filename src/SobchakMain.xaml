<Window x:Class="Sobchak.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Sobchak"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Name="winSobchakMain"
        Title="Sobchak vX.X.X.X"
        Width="800"
        Height="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="150" />
            <RowDefinition Height="150" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!--  LOGO  -->
        <DockPanel x:Name="dpnlLogo"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center">
            <Image x:Name="imgLogo"
                   Height="100"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" />
        </DockPanel>

        <!--  SOURCE  -->
        <Border x:Name="brdrSource"
                Grid.Row="1"
                Height="140"
                Margin="10,0,10,0"
                BorderBrush="#996600"
                BorderThickness="1"
                CornerRadius="5">
            <StackPanel x:Name="spnlSource">
                <Border Height="30"
                        Margin="3"
                        Background="#F2F7F2"
                        BorderBrush="#996600"
                        BorderThickness="1"
                        CornerRadius="5">
                    <Label x:Name="lblSource"
                           Margin="1"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           HorizontalContentAlignment="Center"
                           Content="SOURCE"
                           FontWeight="Bold"
                           Foreground="#996600" />
                </Border>
                <WrapPanel x:Name="wpnlSourcePath"
                           Margin="5,5,5,0">
                    <Label x:Name="lblSourcePath"
                           Width="60"
                           Margin="6,0,0,0"
                           HorizontalContentAlignment="Right"
                           Content="Path"
                           Foreground="#996600" />
                    <TextBox x:Name="txbxSourcePath"
                             Width="600"
                             Height="24"
                             Margin="10,1,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             VerticalContentAlignment="Center"
                             FontSize="10"
                             Text="C:\Users\cbanw\Downloads\steam\The Haunted Island a Frog Detective 0102"
                             TextWrapping="Wrap" />
                    <Button x:Name="btnChooseSourcePath"
                            Height="24"
                            Margin="10,0,0,0"
                            Content="Choose" />
                </WrapPanel>
                <WrapPanel x:Name="wpnlSourceOptions"
                           Margin="5,5,5,0">
                    <Label x:Name="lblSourceOptions"
                           Width="60"
                           Margin="6,0,0,0"
                           HorizontalContentAlignment="Right"
                           Content="Options"
                           Foreground="#996600" />
                </WrapPanel>
            </StackPanel>
        </Border>

        <!--  DESTINATION  -->
        <Border x:Name="brdrDestination"
                Grid.Row="2"
                Height="140"
                Margin="10,0,10,0"
                BorderBrush="#996600"
                BorderThickness="1"
                CornerRadius="5">
            <StackPanel x:Name="spnlDestination">
                <Border Height="30"
                        Margin="3"
                        Background="#F2F7F2"
                        BorderBrush="#996600"
                        BorderThickness="1"
                        CornerRadius="5">
                    <Label x:Name="lblDestrination"
                           Margin="1"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           HorizontalContentAlignment="Center"
                           Content="DESTINATION"
                           FontWeight="Bold"
                           Foreground="#996600" />
                </Border>
                <WrapPanel x:Name="wpnlDestinationPath"
                           Margin="5,5,5,0">
                    <Label x:Name="lblDestinationPath"
                           Width="60"
                           Margin="6,0,0,0"
                           HorizontalContentAlignment="Right"
                           Content="Path"
                           Foreground="#996600" />
                    <TextBox x:Name="txbxDestinationPath"
                             Width="600"
                             Height="24"
                             Margin="10,1,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             VerticalContentAlignment="Center"
                             FontSize="10"
                             Text="C:\Users\cbanw\Downloads\steam\The Haunted Island a Frog Detective 0102"
                             TextWrapping="Wrap" />
                    <Button x:Name="btnChooseDestinationPath"
                            Height="24"
                            Margin="10,0,0,0"
                            Content="Choose" />
                </WrapPanel>
                <WrapPanel x:Name="wpnlDesitnationOptions"
                           Margin="5,5,5,0">
                    <Label x:Name="lblDestinationOptions"
                           Width="60"
                           Margin="6,0,0,0"
                           HorizontalContentAlignment="Right"
                           Content="Options"
                           Foreground="#996600" />
                </WrapPanel>
            </StackPanel>
        </Border>
        <Button Grid.Row="3"
                Margin="672,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="Button" />
    </Grid>
</Window>
