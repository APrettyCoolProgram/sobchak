<Window x:Class="Sobchak.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Sobchak"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Name="winSobchakMain"
        Title="Sobchak vx.x"
        Width="800"
        Height="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120" />
            <RowDefinition Height="125" />
            <RowDefinition Height="175" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!--  LOGO -->
        <DockPanel x:Name="dpnlLogo"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center">
            <Image x:Name="imgLogo"
                   Height="100"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" />
        </DockPanel>

        <!--  SOURCE  -->
        <Border x:Name="brdrSource"
                Grid.Row="1"
                Height="117"
                Margin="10,0,10,0"
                BorderBrush="#996600"
                BorderThickness="1"
                CornerRadius="5">
            <WrapPanel x:Name="spnlSource">
                <Border Height="107"
                        Margin="4"
                        Background="#FFD685"
                        BorderBrush="#996600"
                        BorderThickness="1"
                        CornerRadius="3">
                    <TextBox x:Name="lblSource"
                             Width="15"
                             Height="104"
                             Margin="1"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Top"
                             HorizontalContentAlignment="Center"
                             Background="#FFD685"
                             BorderThickness="0"
                             FontFamily="Consolas"
                             FontSize="14"
                             FontWeight="Bold"
                             Foreground="#996600"
                             Text="SOURCE"
                             TextAlignment="Center"
                             TextWrapping="wrap" />
                </Border>
                <StackPanel x:Name="wpnlSourcePath"
                            Margin="5,5,5,0">
                    <Label x:Name="lblSourcePath"
                           Width="40"
                           Margin="6,0,0,0"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Left"
                           Content="Path"
                           Foreground="#996600" />
                    <TextBox x:Name="txbxSourcePath"
                             Width="720"
                             Height="24"
                             Margin="10,1,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             VerticalContentAlignment="Center"
                             FontSize="10"
                             Text="C:\Users\cbanw\Downloads\steam\The Haunted Island a Frog Detective 0102"
                             TextWrapping="Wrap" />
                    <Button x:Name="btnChooseSourcePath"
                            Width="50"
                            Height="24"
                            Margin="0,5,0,0"
                            HorizontalAlignment="Right"
                            Content="Choose" />
                </StackPanel>
                <WrapPanel x:Name="wpnlSourceOptions"
                           Margin="5,5,5,0" />
            </WrapPanel>
        </Border>

        <!--  FEEDBACK  -->
        <Border Grid.Row="2"
                Background="AliceBlue">
        </Border>

        <!--  BUTTON  -->
        <Border Grid.Row="3"
                Background="RosyBrown">
            <Button HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Button" />
        </Border>
    </Grid>
</Window>
