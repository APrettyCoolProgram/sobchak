<Window x:Class="Sobchak.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Sobchak"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Name="winSobchakMain"
        Title="Sobchak vX.X.X.X"
        Width="800"
        Height="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120" />
            <RowDefinition Height="125" />
            <RowDefinition Height="175" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!--  LOGO  -->
        <DockPanel x:Name="dpnlLogo"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center">
            <Image x:Name="imgLogo"
                   Height="100"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" />
        </DockPanel>

        <!--  SOURCE  -->
        <Border x:Name="brdrSourceWidget"
                Grid.Row="1"
                Height="117"
                Margin="10,0,10,0"
                BorderBrush="#996600"
                BorderThickness="1"
                CornerRadius="5">
            <WrapPanel x:Name="wpnlSourceWidget">
                <Border x:Name="brdrSourceLabel"
                        Height="107"
                        Margin="4"
                        Background="#FFD685"
                        BorderBrush="#996600"
                        BorderThickness="1"
                        CornerRadius="3">
                    <TextBox x:Name="lblSource"
                             Width="15"
                             Height="104"
                             Margin="1"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Top"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             Background="#FFD685"
                             BorderThickness="0"
                             FontFamily="Consolas"
                             FontSize="14"
                             FontWeight="Bold"
                             Foreground="#996600"
                             Text="SOURCE"
                             TextAlignment="Center"
                             TextWrapping="wrap" />
                </Border>
                <StackPanel x:Name="spnlSourcePath"
                            Margin="5,5,5,0">
                    <Label x:Name="lblSourcePath"
                           Width="40"
                           Margin="6,0,0,0"
                           HorizontalAlignment="Left"
                           HorizontalContentAlignment="Left"
                           Content="Path"
                           Foreground="#996600" />
                    <TextBox x:Name="txbxSourcePath"
                             Width="720"

                             Margin="10,1,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             VerticalContentAlignment="Center"
                             FontSize="10"
                             Text="path\to\folder\"
                             TextWrapping="Wrap" />
                    <Button x:Name="btnChooseSourcePath"
                            Width="60"
                            Margin="0,5,0,0"
                            BorderBrush="#996600"
                            BorderThickness="1"
                            HorizontalAlignment="Right"
                            Background="#00A6A6"
                            Content="Choose"
                            Foreground="#F2F7F2">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="2" />
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </WrapPanel>
        </Border>

        <!--  FEEDBACK  -->
        <Border x:Name="brdrFeebackWidget"
                Grid.Row="2"
                Margin="10,5,10,5"
                BorderBrush="Gray"
                BorderThickness="0">
            <DockPanel>
                <Border x:Name="brdrFeedbackVisuals"
                        Width="350"
                        BorderThickness="0"
                        DockPanel.Dock="Left" />
                <Border x:Name="brdr"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="5"
                        DockPanel.Dock="Left">
                    <TextBlock x:Name="txbkFeedback"
                               Width="350"
                               Padding="3"
                               HorizontalAlignment="Left"
                               DockPanel.Dock="Right"
                               Text="TextBlock"
                               TextWrapping="Wrap" />
                </Border>
            </DockPanel>
        </Border>

        <!--  BUTTON  -->
        <Border x:Name="brdrGoButtonWidget"
                Grid.Row="3"
                BorderThickness="0">
            <Button x:Name="btnGo"
                    Width="60"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#00A6A6"
                    BorderBrush="#996600"
                    BorderThickness="1"
                    Content="Go"
                    Foreground="#F2F7F2">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="2" />
                    </Style>
                </Button.Resources>
            </Button>
        </Border>
    </Grid>
</Window>